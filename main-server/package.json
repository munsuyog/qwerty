{
  "name": "namaste-fhir-terminology-server",
  "version": "1.0.0",
  "description": "FHIR R4 compliant terminology server for NAMASTE codes with ICD-11 integration supporting dual coding for traditional medicine",
  "main": "src/app.js",
  "bin": {
    "namaste-cli": "./cli/namaste-cli.js"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ cli/ --ext .js",
    "lint:fix": "eslint src/ cli/ --ext .js --fix",
    "format": "prettier --write src/ cli/",
    "docker:build": "docker build -t namaste-fhir:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "setup": "npm install && npm run setup:env && npm run setup:db",
    "setup:env": "cp .env.example .env",
    "setup:db": "node scripts/setup-database.js",
    "migrate": "node scripts/migrate-database.js",
    "seed": "node scripts/seed-data.js",
    "backup": "node scripts/backup-database.js",
    "restore": "node scripts/restore-database.js",
    "health": "node scripts/health-check.js",
    "cli": "node cli/namaste-cli.js",
    "docs:generate": "jsdoc -c jsdoc.conf.json",
    "docs:serve": "http-server docs/ -p 8080"
  },
  "keywords": [
    "fhir",
    "terminology",
    "ayush",
    "namaste",
    "icd-11",
    "traditional-medicine",
    "healthcare",
    "interoperability",
    "dual-coding",
    "who",
    "ayurveda",
    "siddha",
    "unani"
  ],
  "author": {
    "name": "Ministry of Ayush, Government of India",
    "email": "support@ayush.gov.in",
    "url": "https://www.ayush.gov.in"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayush-ministry/namaste-fhir-terminology.git"
  },
  "bugs": {
    "url": "https://github.com/ayush-ministry/namaste-fhir-terminology/issues"
  },
  "homepage": "https://terminology.ayush.gov.in",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.0",
    "helmet": "^7.0.0",
    "inquirer": "^8.2.6",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongodb": "^5.7.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "ora": "^5.4.1",
    "redis": "^4.6.7",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "winston": "^3.10.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "http-server": "^14.1.1",
    "jest": "^29.6.1",
    "jsdoc": "^4.0.2",
    "mongodb-memory-server": "^8.13.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "redis-memory-server": "^0.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/config/**",
      "!src/utils/logger.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "es2022": true
    },
    "rules": {
      "no-console": "off",
      "class-methods-use-this": "off",
      "import/prefer-default-export": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 100
  }
}
